@page "/my-grades"
@using Client.Services
@using global::Shared.DTOs
@inject IStudentPortalService PortalService
@inject FakeAuthService Auth
@inject NavigationManager Nav

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary"><i class="oi oi-clipboard"></i> Mis Calificaciones</h2>
            <p class="text-muted mb-0">Estudiante: <strong>@Auth.CurrentUserName</strong></p>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center">
            <div class="spinner-border text-primary" role="status"></div>
        </div>
    }
    else if (!grades.Any())
    {
        <div class="alert alert-warning shadow-sm">
            <i class="oi oi-warning"></i> No tienes cursos inscritos o calificaciones registradas.
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <table class="table table-hover table-striped mb-0">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th>Periodo</th>
                            <th>Curso</th>
                            <th>Docente</th>
                            <th class="text-center">Nota Final</th>
                            <th class="text-center">Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in grades)
                        {
                            <tr>
                                <td><span class="badge bg-secondary">@item.Period</span></td>
                                <td class="fw-bold text-dark">@item.CourseName</td>
                                <td class="text-muted">@item.TeacherName</td>
                                <td class="text-center">
                                    @if (item.FinalGrade.HasValue)
                                    {
                                        <span class="fs-5 fw-bold @GetGradeColor(item.FinalGrade.Value)">
                                            @item.FinalGrade.Value.ToString("0.0")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">--</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.FinalGrade.HasValue)
                                    {
                                        @if (item.FinalGrade >= 61)
                                        {
                                            <span class="badge bg-success">Aprobado</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Reprobado</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-info text-dark">Cursando</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@code {
    private IEnumerable<CourseGradeDto> grades = new List<CourseGradeDto>();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        if (Auth.CurrentRole != "Student")
        {
            Nav.NavigateTo("/login");
            return;
        }

        try
        {
            grades = await PortalService.GetMyGradesAsync(Auth.CurrentUserId);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error obteniendo notas: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetGradeColor(decimal grade)
    {
        if (grade >= 90) return "text-success";
        if (grade >= 61) return "text-primary"; 
        return "text-danger";                   
    }
}