@page "/teachers"
@using Client.ViewModels
@inject ITeacherViewModel ViewModel

<h3>Gestión de Docentes</h3>

<div class="mb-3">
    <a href="/teachers/create" class="btn btn-success">Nuevo Docente</a>
</div>

@if (ViewModel.IsLoading)
{
    <div class="spinner-border text-primary"></div>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacher in ViewModel.Teachers)
            {
                <tr>
                    <td>@teacher.FirstName</td>
                    <td>@teacher.LastName</td>
                    <td>@teacher.Email</td>
                    <td>
                        <a href="/teachers/edit/@teacher.Id" class="btn btn-primary btn-sm">Editar</a>
                        <button class="btn btn-danger btn-sm" @onclick="() => ViewModel.DeleteAsync(teacher.Id)">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    protected override async Task OnInitializedAsync()
    {
        await ViewModel.LoadTeachersAsync();
    }
}