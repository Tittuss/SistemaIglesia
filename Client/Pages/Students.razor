@page "/students"
@using Client.ViewModels
@inject IStudentViewModel ViewModel

<h3>Gestión de Estudiantes</h3>

<div class="mb-3">
    <a href="/students/create" class="btn btn-primary">Nuevo Estudiante</a>
</div>

@if (ViewModel.IsLoading)
{
    <p>Cargando...</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Email</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in ViewModel.Students)
            {
                <tr>
                    <td>@student.FirstName @student.LastName</td>
                    <td>@student.Email</td>
                    <td>@(student.IsActive ? "Activo" : "Inactivo")</td>
                    <td>
                        <a href="/students/edit/@student.Id" class="btn btn-primary btn-sm">Editar</a>
                        <button class="btn btn-danger btn-sm" @onclick="() => ViewModel.DeleteAsync(student.Id)">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    protected override async Task OnInitializedAsync()
    {
        await ViewModel.LoadStudentsAsync();
    }
}