@using Client.Services
@inject FakeAuthService Auth
@inject NavigationManager Nav

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold" href="">
            <i class="oi oi-home me-2" aria-hidden="true"></i> Sistema Iglesia
        </a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">

        @if (Auth.CurrentRole == "Director")
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="oi oi-dashboard" aria-hidden="true"></span> Inicio
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="students">
                    <span class="oi oi-people" aria-hidden="true"></span> Estudiantes
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="teachers">
                    <span class="oi oi-briefcase" aria-hidden="true"></span> Docentes
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="courses">
                    <span class="oi oi-book" aria-hidden="true"></span> Cursos
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="enrollments">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Inscripciones
                </NavLink>
            </div>
        }

        @if (Auth.CurrentRole == "Student")
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="my-grades">
                    <span class="oi oi-clipboard" aria-hidden="true"></span> Mis Notas
                </NavLink>
            </div>
        }

        @if (Auth.CurrentRole == "Teacher")
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="my-courses">
                    <span class="oi oi-book" aria-hidden="true"></span> Mis Cursos
                </NavLink>
            </div>
        }

        <div class="nav-item px-3 mt-4 pt-2 border-top border-white-50">
            <button class="nav-link btn btn-link text-white w-100 text-start d-flex align-items-center" @onclick="Logout">
                <span class="oi oi-account-logout me-2" aria-hidden="true"></span> Salir
            </button>
        </div>

    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;
    private void ToggleNavMenu() => collapseNavMenu = !collapseNavMenu;

    private void Logout()
    {
        Auth.Logout();
        Nav.NavigateTo("/login");
    }
}

<style>
    /* PALETA DE COLORES AZUL OSCURO (NAVY) */
    :root {
        --sidebar-bg: #1e3a8a; /* Azul Marino Principal */
        --sidebar-bg-gradient: #0f172a; /* Azul Casi Negro para el degradado */
        --active-link-bg: rgba(255, 255, 255, 0.15);
    }

    /* Fondo con degradado sutil y elegante */
    .sidebar {
        background-image: linear-gradient(180deg, var(--sidebar-bg) 0%, var(--sidebar-bg-gradient) 100%) !important;
        background-color: var(--sidebar-bg) !important;
    }

    /* Barra superior fusionada */
    .top-row.navbar {
        background-color: transparent !important;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    /* Enlaces */
    .nav-item a {
        color: #e2e8f0 !important; /* Blanco grisáceo para no cansar la vista */
        border-radius: 6px;
        margin-bottom: 4px;
        transition: all 0.2s ease-in-out;
        font-weight: 500;
    }

        .nav-item a:hover {
            background-color: var(--active-link-bg) !important;
            color: #ffffff !important;
            transform: translateX(4px); /* Pequeña animación al pasar el mouse */
        }

        /* Elemento Activo: Borde izquierdo y fondo sutil */
        .nav-item a.active {
            background-color: rgba(255, 255, 255, 0.2) !important;
            color: #ffffff !important;
            font-weight: bold;
            border-left: 4px solid #60a5fa; /* Acento azul claro */
        }

    .oi {
        width: 24px;
        text-align: center;
        opacity: 0.8;
    }

    .nav-item a.active .oi {
        opacity: 1;
    }
</style>